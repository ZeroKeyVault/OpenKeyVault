    <div class="notification" id="notification">
        URL copied to clipboard!
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const welcomeScreen = document.getElementById('welcomeScreen');
            const durationSelection = document.getElementById('durationSelection');
            const vaultUrl = document.getElementById('vaultUrl');
            const chatContainer = document.getElementById('chatContainer');
            const vaultOptions = document.querySelectorAll('.vault-option');
            const durationOptions = document.querySelectorAll('.duration-option');
            const urlInput = document.getElementById('urlInput');
            
            // State
            let vaultType = '';
            let vaultDuration = 168; // Default 7 days
            
            // Select vault type (private/public)
            vaultOptions.forEach(option => {
                option.addEventListener('click', function() {
                    vaultType = this.dataset.type;
                    welcomeScreen.style.display = 'none';
                    durationSelection.style.display = 'block';
                });
            });
            
            // Join existing vault button
            document.getElementById('joinVaultBtn').addEventListener('click', function() {
                welcomeScreen.style.display = 'none';
                vaultUrl.style.display = 'block';
                urlInput.value = "https://platform.secure/vault/join";
            });
            
            // Back to vault type selection
            document.getElementById('backToVaultType').addEventListener('click', function() {
                durationSelection.style.display = 'none';
                welcomeScreen.style.display = 'block';
            });
            
            // Select duration
            durationOptions.forEach(option => {
                option.addEventListener('click', function() {
                    durationOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    vaultDuration = this.dataset.duration;
                });
            });
            
            // Create vault
            document.getElementById('createVaultBtn').addEventListener('click', function() {
                durationSelection.style.display = 'none';
                vaultUrl.style.display = 'block';
                
                // Generate random vault ID
                const vaultId = Math.random().toString(36).substring(2, 10);
                urlInput.value = `https://platform.secure/vault/${vaultId}`;
            });
            
            // Copy URL to clipboard
            document.getElementById('copyUrlBtn').addEventListener('click', function() {
                urlInput.select();
                document.execCommand('copy');
                
                // Show notification
                const notification = document.getElementById('notification');
                notification.style.display = 'block';
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 2000);
            });
            
            // Open vault
            document.getElementById('openVaultBtn').addEventListener('click', function() {
                vaultUrl.style.display = 'none';
                chatContainer.style.display = 'flex';
                
                // Add welcome message
                addMessage("Welcome to your secure vault! All messages are end-to-end encrypted and will be automatically deleted after the vault expires.", false, "System");
            });
            
            // Send message
            document.getElementById('sendBtn').addEventListener('click', sendMessage);
            document.getElementById('messageInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });
            
            function sendMessage() {
                const messageInput = document.getElementById('messageInput');
                const message = messageInput.value.trim();
                
                if (message) {
                    addMessage(message, true, "You");
                    messageInput.value = '';
                    
                    // Simulate response after delay
                    setTimeout(() => {
                        const responses = [
                            "I received your encrypted message.",
                            "This vault is securely encrypted.",
                            "All messages are end-to-end encrypted.",
                            "Our conversation will be automatically deleted when the vault expires."
                        ];
                        const response = responses[Math.floor(Math.random() * responses.length)];
                        addMessage(response, false, "Participant");
                    }, 1000);
                }
            }
            
            function addMessage(text, isSent = false, sender = "User") {
                const messagesContainer = document.getElementById('messagesContainer');
                const now = new Date();
                const timeString = `${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')}`;
                
                const messageElement = document.createElement('div');
                messageElement.className = `message ${isSent ? 'sent' : 'received'}`;
                messageElement.innerHTML = `
                    ${text}
                    <div class="message-time">${sender} • ${timeString}</div>
                `;
                
                messagesContainer.appendChild(messageElement);
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
            
            // Initialize with a duration selected
            durationOptions[2].classList.add('selected');
        });
    </script>
</body>
</html>
