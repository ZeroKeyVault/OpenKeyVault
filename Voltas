    <div class="platform-container">
        <header class="header">
            <div class="logo-container">
                <div class="logo-placeholder">P</div>
                <div class="app-name">The Platform</div>
            </div>
            
            <div class="privacy-status">
                <div class="status-indicator"></div>
                <span>Secure Connection</span>
            </div>
        </header>
        
        <div class="main-content">
            <!-- Welcome Screen -->
            <div class="welcome-screen" id="welcomeScreen">
                <div class="welcome-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h1 class="welcome-title">Secure Vault Messaging</h1>
                <p class="welcome-subtitle">
                    Create or join an encrypted vault to start communicating securely. 
                    All messages are end-to-end encrypted and automatically deleted after the vault expires.
                </p>
                
                <div class="vault-options">
                    <div class="vault-option" data-type="private">
                        <i class="fas fa-user-lock"></i>
                        <div class="vault-name">Private Vault</div>
                        <div class="vault-desc">End-to-end encrypted chat with one other person</div>
                    </div>
                    
                    <div class="vault-option" data-type="public">
                        <i class="fas fa-users"></i>
                        <div class="vault-name">Public Vault</div>
                        <div class="vault-desc">Encrypted group chat with multiple participants</div>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button class="action-btn secondary" id="joinVaultBtn">
                        <i class="fas fa-door-open"></i> Join Existing Vault
                    </button>
                </div>
            </div>
            
            <!-- Duration Selection -->
            <div class="duration-selection" id="durationSelection">
                <h2 class="duration-title">Select Vault Duration</h2>
                <div class="duration-options">
                    <div class="duration-option" data-duration="24">24 Hours</div>
                    <div class="duration-option" data-duration="72">3 Days</div>
                    <div class="duration-option" data-duration="168">7 Days</div>
                    <div class="duration-option" data-duration="720">1 Month</div>
                    <div class="duration-option" data-duration="4320">6 Months</div>
                    <div class="duration-option" data-duration="0">Forever</div>
                </div>
                
                <div class="action-buttons">
                    <button class="action-btn secondary" id="backToVaultType">
                        <i class="fas fa-arrow-left"></i> Back
                    </button>
